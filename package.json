{
  "name": "my-axis",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@workspace/web",
    "build:affected": "turbo run build --affected",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@workspace/web",
    "worker": "tsx scripts/run-worker.ts",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "typecheck:core": "turbo run check-types --filter=@workspace/api-kernel --filter=@workspace/domain --filter=@workspace/validation --filter=@workspace/observability",
    "check:api-kernel": "tsx scripts/check-api-kernel.ts",
    "check:db-migrations": "tsx scripts/check-db-migrations.ts",
    "db:generate": "pnpm --filter @workspace/db db:generate",
    "db:migrate": "pnpm --filter @workspace/db db:migrate",
    "db:push": "pnpm --filter @workspace/db db:push",
    "db:studio": "pnpm --filter @workspace/db db:studio",
    "db:performance": "tsx scripts/query-performance.ts",
    "db:reset-stats": "tsx scripts/reset-query-stats.ts",
    "rls:check": "tsx scripts/check-rls-status.ts",
    "rls:enable": "tsx scripts/enable-rls.ts",
    "rls:create-functions": "tsx scripts/create-auth-functions.ts",
    "neon:optimize": "tsx scripts/optimize-neon-config.ts",
    "neon:info": "tsx scripts/neon-info.ts",
    "neon:create-replica": "tsx scripts/create-read-replica.ts",
    "neon:list-replicas": "tsx scripts/list-read-replicas.ts",
    "validate:css": "turbo run validate:css",
    "validate:architecture": "depcruise --validate .dependency-cruiser.js packages apps",
    "validate:exports": "tsx scripts/validate-exports.ts",
    "validate:directives": "tsx scripts/validate-directives.ts",
    "graph:architecture": "depcruise --validate .dependency-cruiser.js --output-type dot packages apps | dot -T svg > architecture.svg",
    "test:architecture": "pnpm validate:architecture && pnpm validate:exports && pnpm validate:directives",
    "test:design-system-freeze": "pnpm --filter @workspace/design-system check-types && pnpm --filter @workspace/design-system lint && pnpm validate:architecture",
    "audit:design-system": "tsx scripts/audit-design-system.ts",
    "fix:design-system-imports": "tsx scripts/fix-design-system-imports.ts",
    "gen:exports": "tsx scripts/generate-exports.ts",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@playwright/test": "^1.49.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.0.0",
    "dependency-cruiser": "^17.3.6",
    "glob": "^13.0.0",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "postcss-nesting": "^14.0.0",
    "prettier": "^3.7.4",
    "tsx": "^4.19.0",
    "turbo": "^2.7.5",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.53.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.971.0",
    "@aws-sdk/s3-request-presigner": "^3.971.0",
    "@fontsource-variable/inter": "^5.2.8",
    "@opentelemetry/exporter-trace-otlp-http": "^0.210.0",
    "@opentelemetry/instrumentation": "^0.210.0",
    "@opentelemetry/resources": "^2.4.0",
    "@opentelemetry/sdk-trace-base": "^2.4.0",
    "@opentelemetry/sdk-trace-node": "^2.4.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "@sentry/nextjs": "^10.35.0",
    "dotenv": "^17.2.3"
  }
}
