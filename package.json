{
  "name": "my-axis",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "typecheck:core": "turbo run check-types --filter=@workspace/api-kernel --filter=@workspace/domain --filter=@workspace/validation --filter=@workspace/observability",
    "check:api-kernel": "tsx scripts/check-api-kernel.ts",
    "check:db-migrations": "tsx scripts/check-db-migrations.ts",
    "db:generate": "pnpm --filter @workspace/db db:generate",
    "db:migrate": "pnpm --filter @workspace/db db:migrate",
    "db:push": "pnpm --filter @workspace/db db:push",
    "db:studio": "pnpm --filter @workspace/db db:studio",
    "validate:css": "turbo run validate:css",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.0.0",
    "glob": "^11.0.0",
    "postcss-nesting": "^14.0.0",
    "prettier": "^3.7.4",
    "tsx": "^4.19.0",
    "turbo": "^2.7.5",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
