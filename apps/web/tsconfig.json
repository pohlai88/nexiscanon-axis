{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@workspace/design-system": ["../../packages/design-system/src/index.ts"],
      "@workspace/design-system/*": ["../../packages/design-system/src/*"],
      "@workspace/auth": ["../../packages/auth/src/index.ts"],
      "@workspace/auth/*": ["../../packages/auth/src/*"],
      "@workspace/validation": ["../../packages/validation/src/index.ts"],
      "@workspace/validation/*": ["../../packages/validation/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
