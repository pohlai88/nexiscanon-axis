{
  // ESLint
  "eslint.useFlatConfig": true,
  "eslint.experimental.useFlatConfig": true,
  "eslint.workingDirectories": [
    {
      "pattern": "packages/*/"
    },
    {
      "pattern": "apps/*/"
    }
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Editor
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.rulers": [
    100
  ],
  // TypeScript
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  // Tailwind CSS v4 IntelliSense
  "tailwindCSS.classFunctions": [
    "cva",
    "cn",
    "clsx",
    "twMerge",
    "twJoin"
  ],
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["twMerge\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["className\\s*[:=]\\s*[\"'`]([^\"'`]*)[\"'`]"]
  ],
  "tailwindCSS.includeLanguages": {
    "typescriptreact": "html",
    "javascriptreact": "html",
    "typescript": "javascript",
    "plaintext": "html"
  },
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.showPixelEquivalents": true,
  "tailwindCSS.rootFontSize": 16,
  "tailwindCSS.hovers": true,
  "tailwindCSS.suggestions": true,
  "tailwindCSS.codeActions": true,
  "tailwindCSS.colorDecorators": true,
  "tailwindCSS.lint.cssConflict": "warning",
  "tailwindCSS.lint.invalidApply": "error",
  "tailwindCSS.lint.invalidScreen": "error",
  "tailwindCSS.lint.invalidVariant": "error",
  "tailwindCSS.lint.invalidConfigPath": "error",
  "tailwindCSS.lint.invalidTailwindDirective": "error",
  "tailwindCSS.lint.recommendedVariantOrder": "warning",
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,
  // Testing
  "vitest.debugExclude": [
    "<node_internals>/**",
    "**/node_modules/**",
    "**/fixtures/**"
  ],
  "vitest.maximumConfigs": 10,
  "vitest.exclude": [
    "**/node_modules/**",
    "**/fixtures/**",
    "**/tools/**",
    "**/templates/**",
    "**/.next/**",
    "**/dist/**"
  ],
  // Files
  "files.exclude": {
    "deprecated": true,
    "**/node_modules": true,
    "**/.turbo": true
  },
  "files.associations": {
    "*.css": "tailwindcss",
    "*.postcss": "tailwindcss"
  },
  "[tailwindcss]": {
    "editor.quickSuggestions": {
      "strings": "on"
    },
    "editor.autoClosingQuotes": "always"
  },
  // Search
  "search.exclude": {
    "packages/design-system/tailwindV4/registry/radix-*": true,
    "packages/design-system/tailwindV4/public/r/*": true,
    "packages/design-system/shadcn/test/fixtures/*": true,
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true
  },
  // Terminal
  "terminal.integrated.cwd": "${workspaceFolder}",
  // Emmet for JSX
  "emmet.includeLanguages": {
    "typescriptreact": "html"
  }
}