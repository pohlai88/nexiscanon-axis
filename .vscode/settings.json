{
  // Code Quality
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  // TypeScript
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  // Total TypeScript - disable educational hints (they are not real errors)
  "totalTypeScript.hideAllTips": true,
  "totalTypeScript.hideBasicTips": true,
  // JSON with Comments (for VSCode config files)
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },
  // Console Ninja
  "console-ninja.featureSet": "Community",
  // Inline Fold - Collapse classNames
  "inlineFold.regex": "(class|className)=\"([^\"]*)",
  "inlineFold.regexFlags": "g",
  "inlineFold.regexGroup": "1",
  "inlineFold.unfoldedOpacity": 0.6,
  "inlineFold.maskChar": "Â·",
  // REST Client
  "rest-client.enableTelemetry": false,
  "rest-client.environmentVariables": {
    "$shared": {
      "baseUrl": "http://localhost:3000"
    }
  },
  // Neon Database
  "neon.projectId": "dark-band-87285012",
  "neon.defaultBranch": "br-icy-darkness-a1eom4rq",
  "neon.databaseName": "neondb",
  "neon.region": "aws-ap-southeast-1",
  // File Associations
  "files.associations": {
    "*.mdc": "markdown",
    "**/drizzle/**/*.sql": "sql"
  },
  // SQL Formatting - using built-in
  "[sql]": {
    "editor.formatOnSave": false
  },
  // CSS Validation - Allow Tailwind @apply and other at-rules
  "css.lint.unknownAtRules": "ignore",
  "css.customData": [
    ".vscode/css-custom-data.json"
  ],
  // Tailwind CSS IntelliSense
  "tailwindCSS.experimental.configFile": {
    "apps/docs/**/*": "packages/design-system/src/styles/globals.css",
    "apps/web/**/*": "packages/design-system/src/styles/globals.css",
    "apps/_shared-ui/**/*": "packages/design-system/src/styles/globals.css",
    "packages/design-system/**/*": "packages/design-system/src/styles/globals.css"
  },
  "tailwindCSS.experimental.classRegex": [
    [
      "cva\\(([^)]*)\\)",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ],
    [
      "cn\\(([^)]*)\\)",
      "(?:'|\"|`)([^']*)(?:'|\"|`)"
    ],
    [
      "(?:const|let|var)\\s+[\\w$_]+\\s*=\\s*[\"'`]([^\"'`]+)[\"'`]",
      "([^\"'`]+)"
    ]
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "classList",
    "ngClass"
  ],
  // Vitest
  "vitest.enable": true,
  "vitest.commandLine": "pnpm vitest",
  "vitest.include": [
    "**/*.{test,spec}.{js,mjs,cjs,ts,mts,cts,jsx,tsx}"
  ],
  "vitest.exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/cypress/**",
    "**/.{idea,git,cache,output,temp}/**",
    "**/{karma,rollup,webpack,vite,vitest,jest,ava,babel,nyc,cypress,tsup,build}.config.*"
  ],
  "vitest.rootConfig": "./vitest.config.ts",
  "vitest.disableWorkspaceWarning": false,
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  }
}