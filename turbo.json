{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "description": "Build the application"
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "description": "Start development server"
    },
    "lint": {
      "dependsOn": [],
      "description": "Run linter"
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "description": "Type check all files"
    },
    "test:e2e": {
      "cache": false,
      "persistent": false,
      "description": "Run end-to-end tests"
    },
    "validate:architecture": {
      "cache": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".dependency-cruiser.js",
        "packages/*/package.json",
        "apps/*/package.json"
      ],
      "description": "Validate architectural boundaries with Dependency Cruiser"
    },
    "test:design-system-freeze": {
      "dependsOn": ["validate:architecture"],
      "cache": false,
      "description": "Run all design-system freeze validation checks"
    }
  },
  "globalDependencies": ["**/tsconfig.json", ".env", ".env.local"]
}
