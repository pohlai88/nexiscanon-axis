{
  "$schema": "https://turbo.build/schema.v2.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "VERCEL_GIT_COMMIT_SHA"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "!dist/**/*.map"],
      "env": [
        "DATABASE_URL",
        "NEON_AUTH_BASE_URL",
        "NEXT_PUBLIC_NEON_AUTH_URL",
        "JWKS_URL",
        "RESEND_API_KEY",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "R2_ACCOUNT_ID",
        "R2_ACCESS_KEY_ID",
        "R2_SECRET_ACCESS_KEY",
        "R2_BUCKET_NAME",
        "R2_ENDPOINT",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_ROOT_DOMAIN",
        "OTEL_EXPORTER_OTLP_ENDPOINT",
        "OTEL_EXPORTER_OTLP_HEADERS",
        "OTEL_SERVICE_NAME",
        "OTEL_EXPORTER_OTLP_PROTOCOL",
        "SENTRY_DSN",
        "LOG_LEVEL",
        "ARCJET_KEY"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": []
    },
    "format:check": {
      "cache": false,
      "outputs": []
    },
    "format:write": {
      "cache": false,
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "check": {
      "dependsOn": ["lint", "typecheck", "format:check", "validate"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    },
    "registry": {
      "cache": false
    },
    "registry:build": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "registry:capture": {
      "cache": false
    },
    "examples:build": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "preview": {
      "cache": false,
      "persistent": true
    },
    "codegen": {
      "dependsOn": ["^codegen"],
      "cache": true,
      "outputs": ["__generated__/**"]
    },
    "validate": {
      "dependsOn": ["typecheck"],
      "cache": true,
      "outputs": []
    }
  }
}
