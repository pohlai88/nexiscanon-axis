{
  "name": "@workspace/design-system",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./components/*": {
      "types": "./src/components/*.tsx",
      "default": "./src/components/*.tsx"
    },
    "./lib/*": {
      "types": "./src/lib/*.ts",
      "default": "./src/lib/*.ts"
    },
    "./hooks/*": {
      "types": "./src/hooks/*.ts",
      "default": "./src/hooks/*.ts"
    },
    "./blocks": {
      "types": "./src/blocks/index.ts",
      "default": "./src/blocks/index.ts"
    },
    "./blocks/*": {
      "types": "./src/blocks/*.tsx",
      "default": "./src/blocks/*.tsx"
    },
    "./styles/*": "./src/styles/*"
  },
  "scripts": {
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "format:write": "prettier --write \"**/*.{ts,tsx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx}\" --cache",
    "css:dev": "@tailwindcss/cli -i ./src/styles/globals.css -o ./dist/output.css --watch",
    "css:build": "@tailwindcss/cli -i ./src/styles/globals.css -o ./dist/output.css --minify",
    "registry:build": "node scripts/build-registry.mjs",
    "registry:validate": "node -e \"const r = require('./registry.json'); console.log('Registry valid:', r.items.length, 'items')\""
  },
  "dependencies": {
    "@base-ui/react": "1.1.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-accessible-icon": "^1.1.1",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.5",
    "@radix-ui/react-aspect-ratio": "^1.1.1",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-collapsible": "^1.1.2",
    "@radix-ui/react-context-menu": "^2.2.5",
    "@radix-ui/react-dialog": "^1.1.5",
    "@radix-ui/react-dropdown-menu": "^2.1.5",
    "@radix-ui/react-hover-card": "^1.1.5",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-menubar": "^1.1.5",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.5",
    "@radix-ui/react-portal": "^1.1.3",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-radio-group": "^1.2.2",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.5",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slider": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.5",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-table": "^8.9.1",
    "canvas-confetti": "^1.9.4",
    "chrono-node": "^2.8.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-autoplay": "8.5.2",
    "embla-carousel-react": "8.5.2",
    "input-otp": "^1.4.2",
    "lucide-react": "0.474.0",
    "motion": "^12.29.0",
    "next-themes": "0.4.6",
    "react-day-picker": "^9.7.0",
    "react-hook-form": "^7.71.1",
    "react-resizable-panels": "^3.0.6",
    "react-textarea-autosize": "^8.5.9",
    "recharts": "2.15.1",
    "sonner": "^2.0.0",
    "tailwind-merge": "^3.0.1",
    "vaul": "1.1.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "typescript": "^5"
  },
  "peerDependencies": {
    "next": ">=15.0.0",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  }
}
